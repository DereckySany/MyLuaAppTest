<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/theme_default_listDividerLineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="?theme_backgroundColor"
        android:layout_gravity="left|center"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="48dp"
          android:layout_marginLeft="2dp"
          android:layout_height="match_parent"
          android:background="@drawable/ripple"
          android:gravity="center">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_twotone_folder_24"
            app:tint="?theme_hintTextColor" />
      </LinearLayout>
      <TextView
          android:id="@+id/title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="12dp"
          android:layout_weight="1"
          android:ellipsize="start"
          android:singleLine="true"
          android:textColor="?theme_textColor"
          android:textSize="16sp" />

      <LinearLayout
          android:id="@+id/more"
          android:clickable="true"
          android:layout_width="48dp"
          android:layout_height="match_parent"
          android:background="@drawable/ripple"
          android:gravity="center">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_twotone_more_vert_24"
            app:tint="?theme_hintTextColor" />
      </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="?theme_cardBackgroundColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </LinearLayout>
</FrameLayout>